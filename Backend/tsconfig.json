{
  "compilerOptions": {
    "target": "ESNext",
    "paths": {
      "@": ["/uploads"]
    },
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["./src"],
  "typeRoots": ["../global.d.ts", "./node_modules/@types"]
  
}
